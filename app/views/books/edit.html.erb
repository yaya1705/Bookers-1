<body>
   <h1>Editing Book</h1>
  <%= form_with model: @book, url: book_path(@book), method: :patch do |f|%>
    <div class="field">
        <label>Title</label> <br>
        <%= f.text_field :title %>
     </div>
     <div class="field">
        <label>Body</label> <br>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit "Create Book" %>
      </div>
    </div>
  <% end %>
  <%= link_to "show", book_path(@book) %>
  |
  <%= link_to "Back", books_path %>
</body>